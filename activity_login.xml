<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    tools:context=".login"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/hotel"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/brandDark"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/signInEmailField"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:hint="Email"
        android:padding="10dp"
        android:textColor="@color/brandDark"
        android:background="@android:drawable/edit_text"
        android:inputType="textEmailAddress"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/signInPasswordField"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:hint="Password"
        android:padding="10dp"
        android:textColor="@color/brandDark"
        android:background="@android:drawable/edit_text"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/signInButton"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textAllCaps="false"
        android:layout_marginTop="18dp"
        android:onClick="signIn"
        android:textColor="#FFFFFF"
        android:backgroundTint="@color/brandGreen"/>

    <Button
        android:id="@+id/manageUsersButton"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Manage Users"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"
        android:backgroundTint="@color/brandGreen"
        android:visibility="gone"/>
    <Button
        android:id="@+id/goToRegisterBtn"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textAllCaps="false"
        android:layout_marginTop="12dp"
        android:textColor="@color/brandGreen"
        android:backgroundTint="#FFFFFF"
        android:onClick="goToRegister"/>

</LinearLayout>
